# Cricksy Scorer Environment Configuration

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/cricksy_scorer

# =============================================================================
# API Configuration
# =============================================================================
CRICKSY_API_TITLE=Cricksy Scorer API
CRICKSY_LOG_LEVEL=INFO
CRICKSY_IN_MEMORY_DB=0

# CORS Origins (comma-separated)
CRICKSY_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Socket.IO CORS
CRICKSY_SIO_CORS_ORIGINS=*

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable upload feature
ENABLE_UPLOADS=1

# Enable/disable OCR processing
ENABLE_OCR=1

# =============================================================================
# Upload Configuration
# =============================================================================
# Maximum file size in MB
MAX_UPLOAD_SIZE_MB=10

# Upload retention period in days
UPLOAD_RETENTION_DAYS=30

# =============================================================================
# S3/MinIO Configuration
# =============================================================================
# For MinIO (Development):
S3_ENDPOINT_URL=http://localhost:9000
S3_USE_PATH_STYLE=1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_UPLOAD_BUCKET=cricksy-uploads

# For AWS S3 (Production):
# S3_ENDPOINT_URL=  # Leave empty for AWS
# S3_USE_PATH_STYLE=0
# S3_ACCESS_KEY_ID=your-aws-access-key
# S3_SECRET_ACCESS_KEY=your-aws-secret-key
# S3_REGION=us-east-1
# S3_UPLOAD_BUCKET=cricksy-prod-uploads

# =============================================================================
# Celery Worker Configuration
# =============================================================================
# Redis broker for Celery
CELERY_BROKER_URL=redis://localhost:6379/0

# Redis result backend for Celery
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Redis Configuration (for Socket.IO adapter)
# =============================================================================
# Redis URL for Socket.IO multi-server support
# Leave empty for single-server mode
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# Static Files
# =============================================================================
CRICKSY_STATIC_ROOT=backend/static
CRICKSY_SPONSORS_DIR=backend/static/sponsors

# =============================================================================
# Development/Testing
# =============================================================================
# Set to 1 to enable debug mode
DEBUG=0

# Set to 1 to enable async debugging
CRICKSY_DEBUG_ASYNCPG=0
