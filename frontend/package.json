{
  "name": "cricksy-scorer-ui",
  "version": "1.0.0",
  "description": "Professional cricket scoring application for schools",
  "private": true,
  "type": "module",
  "scripts": {
    "img:opt": "node tools/optimize-images.mjs",
    "build": "npm run img:opt && run-p type-check \"build-only {@}\" --",
    "preview": "vite preview --host localhost",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "format": "prettier --write src/",
    "dev": "vite --host localhost",
    "test": "echo \"Use npm run test:unit for unit tests\" && exit 0",
    "test:unit": "vitest run",
    "test:e2e": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\run-e2e.ps1",
    "test:e2e:dev": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\scripts\\run-e2e-dev.ps1",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "dependencies": {
    "@picocss/pico": "^2.0.6",
    "chart.js": "^4.4.1",
    "marked": "^17.0.1",
    "pinia": "^2.1.7",
    "socket.io-client": "^4.8.1",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/node22": "^22.0.2",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "cypress": "^15.7.0",
    "eslint": "^9.12.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.3",
    "sharp": "^0.34.5",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "vite": "^7.1.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.0"
  },
  "keywords": [
    "cricket",
    "scoring",
    "school",
    "sports",
    "vue",
    "typescript"
  ],
  "author": "Cricksy Scorer Team",
  "license": "MIT"
}
