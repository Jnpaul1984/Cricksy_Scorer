# Example Environment Configuration for Cricksy Scorer

# API Configuration
VITE_API_BASE=http://localhost:8000
VITE_SOCKET_URL=http://localhost:8000

# =============================================================================
# LLM Provider API Keys (for AI features)
# =============================================================================

# Google Gemini API Key
# Get yours at: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================

# Application Configuration
VITE_APP_NAME=Cricksy Scorer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Cricket Scoring Application

# Default Settings
VITE_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_AI_FEATURES=true
VITE_LLM_DEBUG=false

# UI Configuration
VITE_DEFAULT_OVERS_LIMIT=25
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_SOUND_EFFECTS=true

# Performance Settings
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3
VITE_CACHE_TTL=600000
